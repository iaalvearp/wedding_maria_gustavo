---
interface Props {
    side: string,
    src: string,
    text: string,
    hour: string
}

const { side, src, text, hour } = Astro.props
---

<div class="container-right to-the-left">
    <div slot= "left" class="line-container">
        <div class="line-right to-the-left"></div>
    </div>
    <div class="side delay-2">
        <img src={ src } alt="">
        <p>{ text }</p>
        <h3>{ hour }</h3>
    </div>
</div>
<style>
    .container-right {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: #fff;
        font-family: "Corporate", sans-serif;
        margin-bottom: 1rem;
        overflow: hidden;
        
        
        .side {
            min-width: 65%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            transition: all 0.5s;
            overflow: hidden;
        }

        .right, .left {
            width: 50%;
        }
        img {
            width: 75%;
            max-width: 8rem;
        }
        p {
            width: 90%;
            margin: 0 auto;
            font-size: 1rem;
            line-height: 1.25rem;
            text-wrap: pretty;
        }
        h3 {
            font-size: 1rem;
            margin: 0;
        }

        
    }
    .line-container {
            width: 100%;
            overflow: hidden;
            
            .line-right {
                width: 100%;
                height: 1px;
                background-color: #fff;
            }
    }
    @media (width >= 768px) {
        .container-right {
            .side {
                min-width: 8rem;
            }
            p {
                font-size: 1rem;
            }
            h3 {
                font-size: 1.25rem;
            }
        }
        
        
    }
</style>