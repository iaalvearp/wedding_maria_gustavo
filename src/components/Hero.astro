<header class="w-full min-h-screen max-w-3xl relative mx-auto overflow-hidden">
    <img src="img/hero.webp" alt="" class="hero">
    <img class="logo" src="assets/logo.png" alt="">
    <span class="vanish-effect"></span>
    <img src="assets/watercolor-pink.png" alt="" class="pink">
</header>

<style>
    header {
        width: 100%;
        height: 100vh;
        max-width: 48rem;
        position: relative;
        overflow: hidden;
        margin: 0 auto;

        .hero {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
            bottom: 0;
        }

        .logo {
            position: absolute;
            margin: 0 auto;
            left: 0;
            right: 0;
            top: 8vh;
            width: 30%;
            height: auto;
        }

        .vanish-effect {
            height: 25vh;
            width: 100%;
            background: linear-gradient(transparent, #fff);
            position: absolute;
            bottom: 0;
        }
        
        .pink {
            position: absolute;
            bottom: -10vh;
            width: 100%;
            height: auto;
            opacity: .4;
        }

        @media (width >= 768px) {
            .logo {
                top: 5vh;
                width: 17%;
            }
            .vanish-effect {
                height: 15vh;
            }
            .pink {
                bottom: -30vh;
            }
        }

    }


</style>